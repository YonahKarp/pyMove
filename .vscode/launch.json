    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: run pyMove",
            "type": "python",
            "request": "launch",
            "program": "pyMove.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: pyMove Debug",
            "type": "python",
            "request": "launch",
            "program": "pyMove.py",
            "console": "integratedTerminal",
            "args": ["True"]
        },
        {
            "name": "Python: Current File in current Directory",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: Current File in above Directory",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "env": {
                "PYTHONPATH": "../:."
            },
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        },
    ]
}